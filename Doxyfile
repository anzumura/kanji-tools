# Doxyfile 1.9.4

# INPUT and OUTPUT_DIRECTORY are defined below assuming 'doxygen' is executed in
# the top level repo directory - output is generated under build/docs/html.

# create a Doxygen group (module) in a header (used by below 'XX_group' aliases)
ALIASES += grp{2}="\file \2.h header in lib: <b>\1</b>^^\addtogroup \1_\2^^@{"

# one '\XX_group' '\end_group' pair should be put inside the top level namespace 
# in each header in order to include all classes, global functions and variables
ALIASES += end_group="@}"

# alias to display the 'lib' a class belongs to as well as adjust '#include' to
# show the expected value (ie kanji_tools/'lib' as a prefix)
ALIASES += cls{2}="\headerfile \2.h kanji_tools/\1/\2.h [lib: <b>\1</b>] "

# single arg 'XX_group' and 'XX_class' aliases for each lib in the project
ALIASES += utils_group{1}="\grp{utils,\1}" utils_class{1}="\cls{utils,\1}"
ALIASES += kana_group{1}="\grp{kana,\1}" kana_class{1}="\cls{kana,\1}"
ALIASES += kanji_group{1}="\grp{kanji,\1}" kanji_class{1}="\cls{kanji,\1}"
ALIASES += quiz_group{1}="\grp{quiz,\1}" quiz_class{1}="\cls{quiz,\1}"
ALIASES += stats_group{1}="\grp{stats,\1}" stats_class{1}="\cls{stats,\1}"

# override default settings for the following config values
DISTRIBUTE_GROUP_DOC   = YES # one description can be used for each group member
EXTENSION_MAPPING      = json=md
EXTRACT_ALL            = YES
FILE_PATTERNS          = *.cpp *.h *.md *.json
GENERATE_LATEX         = NO
GROUP_NESTED_COMPOUNDS = YES
HIDE_SCOPE_NAMES       = YES # hides the namespace:: part
IMAGE_PATH             = docs
INPUT                  = README.md .vscode docs libs
LAYOUT_FILE            = DoxygenLayout.xml
MULTILINE_CPP_IS_BRIEF = YES
OUTPUT_DIRECTORY       = build/docs
OUTPUT_LANGUAGE        = English
PROJECT_BRIEF          = "Tools for working with Japanese Kana and Kanji"
PROJECT_NAME           = "Kanji Tools"
PROJECT_NUMBER         = 1.0
QUIET                  = YES
RECURSIVE              = YES
SHOW_INCLUDE_FILES     = NO # show list of files included by a file
TAB_SIZE               = 2
USE_MDFILE_AS_MAINPAGE = README.md
WARN_AS_ERROR          = FAIL_ON_WARNINGS # warnings cause a non-zero return
WARN_IF_INCOMPLETE_DOC = NO

