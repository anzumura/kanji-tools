// docs: https://code.visualstudio.com/docs/cpp/c-cpp-properties-schema-reference
{
  "env": {
    "googletest": "${workspaceFolder}/build/_deps/googletest-src",
    "localIncludePath": [
      "${workspaceFolder}/libs/kana/include",
      "${workspaceFolder}/libs/kanji/include",
      "${workspaceFolder}/libs/quiz/include",
      "${workspaceFolder}/libs/stats/include",
      "${workspaceFolder}/libs/utils/include",
      "${workspaceFolder}/tests/include",
      // "/opt/icu/include",
      // "/opt/boost/include",
      "${googletest}/googletest/include",
      "${googletest}/googletest",
      "${googletest}/googlemock/include",
      "${googletest}/googlemock"
    ],
    "tools": "/Library/Developer/CommandLineTools",
    "sdk": "${tools}/SDKs/MacOSX.sdk/usr/include",
    // clang specific
    "clangVer": "clang/15.0.0",
    // gcc specific
    "gccVer": "13",
    "appleVer": "aarch64-apple-darwin22",
    "brew": "/opt/homebrew",
    "g++": "${brew}/include/c++/${gccVer}",
    "gcc": "${brew}/Cellar/gcc/${gccVer}.1.0/lib/gcc/current/gcc/${appleVer}/${gccVer}"
  },
  "configurations": [
    {
      "name": "Mac",
      "compilerPath": "/usr/bin/clang++",
      "includePath": [
        "${localIncludePath}",
        "${sdk}/c++/v1",
        "${tools}/usr/lib/${clangVer}/include",
        "${sdk}",
        "${tools}/usr/include"
      ],
      "intelliSenseMode": "macos-clang-arm64"
    },
    {
      "name": "Mac-GCC",
      "compilerPath": "${brew}/bin/g++-${gccVer}",
      "includePath": [
        "${localIncludePath}",
        "${g++}",
        "${g++}/${appleVer}",
        "${g++}/backward",
        "${gcc}/include",
        "${gcc}/include-fixed",
        "${sdk}"
      ],
      "intelliSenseMode": "macos-gcc-arm64"
    }
  ],
  "version": 4
}
